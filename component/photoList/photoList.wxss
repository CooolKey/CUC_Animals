.photo {
    box-sizing: border-box;
    width: 750rpx;
    padding: 15rpx 40rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
    /*box-shadow: 0 0 40rpx #f4f4f4 inset;*/
    background-color: #ebebeb;
}

.photo-item {
    width: 100%;
    margin-bottom: 28rpx;
    border-radius: 20rpx;
    background-color: #fff;
    /*border: 1px solid #e4e4e4;*/
    box-shadow: 5rpx 5rpx 15rpx rgba(129, 129, 129, 0.425);
    overflow: hidden;
    animation: fadeIn 1s;
}

.photo-cover, .photo-cover-img {
    width: 675rpx;
}

.photo-cover {
    position: relative;
    overflow: hidden;
}

.file-intro {
    padding: 20rpx;
}

.photo-title {
    font-size: 35rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.photo-upper {
    width: 100%;
    margin-top: 10rpx;
    display: flex;
    justify-content: flex-start;
}

.photo-upper-item {
    font-size: 24rpx;
    color: #666;
}

.loading-tip {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #ccc;
}