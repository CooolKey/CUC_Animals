/* pages/uploading/uploading.wxss */
.container{
  padding-bottom: 15rpx;
}
.input_title{
  padding-left: 30rpx;
  padding: 35rpx 20rpx;
  background-color: rgb(245, 245, 245);
  font-size: 35rpx;
}
.upload-notice{
  display: block;
  padding: 25rpx 0 0 15rpx;
  padding-left: 30rpx;
  /*font-weight: lighter;*/
  font-size: 30rpx;
  color: rgb(80, 80, 80);
}
.upload{
  display: flex;
  margin: 15rpx 5rpx;

}
.upload.filled{
  /*width: calc(100% - 50rpx);*/
  background-color: white;
}
.upload-placeholder{
  background-color: rgb(245, 245, 245);
  height: 200rpx;
  width: 200rpx;
  padding: 20rpx;
  margin: 17rpx;
}
.upload-list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.upload-icon, .upload-image{
  width: 100%;
  height: 100%;
  color: #ccc;
}
.upload-image{
  height: 200rpx;
  width: 200rpx;
  margin: 17rpx;
}
.cancel{
  float: right;
}
.submit{
  display: block;
  width: 125rpx;
  height: 70rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  line-height: 70rpx;
  font-size: 0.9em;
  float: right;
  border-radius: 0;
  background-color: white;
  border: solid 1px #ccc;
}
.submit::after{
  
  border: 0;
  border-radius: 0;
}

button{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  color: rgb(82, 82, 82);
  font-size: 35rpx;
  border-radius: 0rpx;
  background-color: #fff;
}